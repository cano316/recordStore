<%- include('partials/header') %>
    <h1>Add New Product</h1>
    <form action="/products" method="post">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Album Title" required>
        <label for="artist">Artist:</label>
        <input type="text" name="artist" id="artist" placeholder="Album Artist" required>
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" placeholder="Price" required>
        <label for="genre">Genre</label>
        <input type="text" name="genre" id="genre" placeholder="Genre" required>
        <label for="format">Format</label>
        <select name="format" id="format" required>
            <option value="CD">CD</option>
            <option value="LP">LP</option>
            <option value="Cassette">Cassette</option>
            <option value="Reel-To-Reel">Reel-To-Reel</option>
            <option value="8-Track">8-Track</option>
        </select>
        <button type="submit">Submit</button>
    </form>
    <%- include('partials/footer') %>